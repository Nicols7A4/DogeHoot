# Configuración de Azure/Microsoft Graph
AZURE_CLIENT_ID=tu_client_id_aqui
AZURE_CLIENT_SECRET=tu_client_secret_aqui
AZURE_REDIRECT_URI=http://localhost:5001/onedrive/callback

# Configuración de Base de Datos Local
DB_HOST_LOCAL=127.0.0.1
DB_USER_LOCAL=root
DB_PASS_LOCAL=tu_password
DB_NAME_LOCAL=dogehoot

# Configuración de TiDB Cloud (Producción)
DB_HOST_TIDB=tu_host.tidbcloud.com
DB_PORT_TIDB=4000
DB_USER_TIDB=tu_usuario
DB_PASS_TIDB=tu_password
DB_NAME_TIDB=dogehoot

# Configuración de PythonAnywhere
DB_HOST_PYTHONANYWHERE=tu_host.mysql.pythonanywhere-services.com
DB_USER_PYTHONANYWHERE=tu_usuario
DB_PASS_PYTHONANYWHERE=tu_password
DB_NAME_PYTHONANYWHERE=tu_usuario$tu_db

# Entorno actual (local, tidb, pythonanywhere)
DB_ENVIRONMENT=local
